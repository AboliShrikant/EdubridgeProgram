package makeMyTrip;

import org.testng.annotations.Test;

import io.github.bonigarcia.wdm.WebDriverManager;

import org.testng.annotations.BeforeTest;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.concurrent.TimeUnit;

import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.AfterTest;

public class login 
{
	WebDriver wd;
	@Test
	public void log() throws IOException
	{
		//click on loginAccount
		//wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[1]/div[1]/div[1]/ul[1]/li[3]")).click();
		//click on login with google
		//wd.findElement(By.cssSelector("div[data-cy=googleLogin]")).click();
		//click on login with PhoneNo/Email
		wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[1]/div[1]/div[1]/ul[1]/li[3]/div[3]/div[1]/div[2]")).click();

		File f=new File("Data/signupdata.xlsx");
		FileInputStream fis=new FileInputStream(f);
		XSSFWorkbook wk=new XSSFWorkbook(fis);
		XSSFSheet sh= wk.getSheet("sheet1");

		for(int i=1; i<=4; i++)
		{
			//click on email box
			WebElement email=wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[1]/div[1]/div[2]/div[2]/section[1]/form[1]/div[1]/div[1]/input[1]"));
			//click on continue button
			WebElement cont=wd.findElement(By.cssSelector("button[data-cy=continueBtn]"));

			String em=sh.getRow(i).getCell(0).toString();
			System.out.println( em );
			email.sendKeys(em);
			cont.click();
			wd.manage().timeouts().implicitlyWait(20, TimeUnit.SECONDS);
			try
			{
				for(int j=1; j<=4; j++)
				{//WebElement pswd=wd.findElement(By.cssSelector("input[data-cy=password]"));
					WebElement pswd=wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[1]/div[1]/div[2]/div[2]/section[1]/form[1]/div[1]/div[1]/input[2]"));
					String p=sh.getRow(j).getCell(1).toString();
					System.out.println( "   |   " +p );
					pswd.sendKeys(p);
					wd.manage().timeouts().implicitlyWait(20, TimeUnit.SECONDS);
					//click on login
					wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[1]/div[1]/div[2]/div[2]/section[1]/form[1]/div[2]/button[1]")).click();
					//click on Hi Aboli
					wd.findElement(By.xpath("//body[1]/div[1]/div[1]/div[1]/div[1]/div[2]/div[1]/div[1]/ul[1]/li[1]/div[2]/a[1]/div[1]")).click();
					//click on profile
					wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[1]/div[1]/div[1]/div[1]/div[1]/ul[1]/li[1]/div[2]/a[1]")).click();
					//Click on logout
					wd.findElement(By.xpath("/html[1]/body[1]/div[1]/div[1]/div[2]/div[1]/div[1]/div[2]/div[1]/div[1]/ul[1]/li[4]")).click();
				}
			}
				catch(Exception e)
				{
					System.out.println("Invalid credentials");
				}

			}

		}
		@BeforeTest
		public void beforeTest() 
		{
			WebDriverManager.chromedriver().setup();
			wd=new ChromeDriver();
			wd.manage().window().maximize();
			wd.get("https://www.makemytrip.com/");

		}

		@AfterTest
		public void afterTest() 
		{
			wd.close();

		}

	}
